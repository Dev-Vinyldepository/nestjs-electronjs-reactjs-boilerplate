{
  "name": "@hc/backend",
  "version": "1.0.0",
  "description": "Vinyl Depository",
  "author": {
   "name": "Vinyl Depository",
   "email": "dev@vinyldepository.com",
   "url": "https://vinyldepository.com"
  },
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev:nest": "cross-env NODE_ENV=development nest start --watch --exec \"yarn start:electron\"",
    "start:electron": "electron",
    "dev": "wait-on http-get://localhost:4200/ && yarn run dev:nest",
    "build:nest": "cross-env NODE_ENV=production nest build",
    "build:electron:dir": "electron-builder --config electron.buid.js --dir",
    "build:electron:dist": "electron-builder --config electron.buid.js",
    "build": "run-s build:nest build:electron:dir",
    "build:dist": "run-s build:nest build:electron:dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:nest": "cross-env NODE_ENV=development nest start",
    "start": "wait-on http-get://localhost:4200/ && run-s start:nest start:electron",
    "debug:nest": "cross-env NODE_ENV=development nest start --debug --watch",
    "debug": "wait-on http-get://localhost:4200/ && run-s debug:nest start:electron",
    "start:prod": "cross-env NODE_ENV=producation node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "electron": "^16.0.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^22.14.5",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "wait-on": "^6.0.0",
    "webpack-node-externals": "^3.0.0"
  }
}
